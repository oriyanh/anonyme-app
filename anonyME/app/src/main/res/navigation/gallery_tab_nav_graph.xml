<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/gallery_tab_nav_graph"
    app:startDestination="@id/galleryFragment">

    <fragment
        android:id="@+id/galleryFragment"
        android:name="com.mashehu.anonyme.fragments.GalleryFragment"
        android:label="gallery_fragment"
        tools:layout="@layout/fragment_gallery">
        <action
            android:id="@+id/action_galleryFragment_to_confirmImagesFragment"
            app:destination="@id/confirmImagesFragment" />
    </fragment>
    <fragment
        android:id="@+id/confirmImagesFragment"
        android:name="com.mashehu.anonyme.fragments.ConfirmImagesFragment"
        android:label="fragment_confirm_images"
        tools:layout="@layout/fragment_confirm_images">
        <action
            android:id="@+id/action_confirmImagesFragment_to_loadingScreenFragment"
            app:destination="@id/loadingScreenFragment" />
        <action
            android:id="@+id/action_confirmImagesFragment_to_galleryFragment"
            app:destination="@+id/galleryFragment"
            app:popUpTo="@+id/gallery_tab_nav_graph"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/loadingScreenFragment"
        android:name="com.mashehu.anonyme.fragments.LoadingScreenFragment"
        android:label="fragment_loading_screen"
        tools:layout="@layout/fragment_loading_screen">
        <action
            android:id="@+id/action_loadingScreenFragment_to_galleryFragment"
            app:destination="@id/galleryFragment" />
    </fragment>
</navigation>