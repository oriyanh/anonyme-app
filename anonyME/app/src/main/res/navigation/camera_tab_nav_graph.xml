<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/camera_tab_nav_graph"
    app:startDestination="@id/cameraCaptureFragment">

    <fragment
        android:id="@+id/cameraCaptureFragment"
        android:name="com.mashehu.anonyme.fragments.CameraCaptureFragment"
        android:label="fragment_camera_capture"
        tools:layout="@layout/fragment_camera_capture" >
        <action
            android:id="@+id/action_cameraCaptureFragment_to_confirmImagesFragment2"
            app:destination="@id/confirmImagesFragment2" />
    </fragment>
    <fragment
        android:id="@+id/confirmImagesFragment2"
        android:name="com.mashehu.anonyme.fragments.ConfirmImagesFragment"
        android:label="fragment_confirm_images"
        tools:layout="@layout/fragment_confirm_images" >
        <action
            android:id="@+id/action_confirmImagesFragment2_to_loadingScreenFragment2"
            app:destination="@id/loadingScreenFragment2" />
        <action
            android:id="@+id/action_confirmImagesFragment2_to_cameraCaptureFragment"
            app:destination="@id/cameraCaptureFragment"
            app:popUpTo="@+id/camera_tab_nav_graph"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/loadingScreenFragment2"
        android:name="com.mashehu.anonyme.fragments.LoadingScreenFragment"
        android:label="fragment_loading_screen"
        tools:layout="@layout/fragment_loading_screen" >
        <action
            android:id="@+id/action_loadingScreenFragment2_to_cameraCaptureFragment"
            app:destination="@id/cameraCaptureFragment" />
    </fragment>
</navigation>